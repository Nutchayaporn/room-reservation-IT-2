# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Room {
  room_id: ID!
  room_name: String!
  room_status: String!
  room_capacity: Int!
  type_id: Int!
  room_type: RoomType!
  room_facility: [RoomFacility!]!
}

type RoomType {
  type_id: Int!
	type_name: String!
}

type RoomFacility {
  facility_id: Int!
	room_id: Int!
	quantity: Int!
	facility: Facility!
}

type Facility {
  facility_id: Int!
	facility_name: String!
}


type Account {
  account_id: String!
	first_name: String!
	last_name: String!
	role: String! 
	email: String!
}

type Query {
  rooms: [Room!]!
  account: [Account!]!

}

input NewAccount {
  account_id: String!
	first_name: String!
	last_name: String!
	email: String!
}

input NewRoom {
  room_name: String!
  room_capacity: Int!
  type_id: Int!

}



type Mutation {
  createRoom(input: NewRoom!): Room!
  createAccount(input: NewAccount!): Account!
}
